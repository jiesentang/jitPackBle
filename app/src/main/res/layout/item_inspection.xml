<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginTop="10dp">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="影响正常功能运转"
        android:textColor="#FF414449"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="7dp"
        android:layout_height="12dp"
        android:src="@drawable/to_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="2"
        android:layout_marginTop="20dp"
        android:text="故障部位：外观故障部位：故障部位：外观故障部位故障部位：外观故障部位外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观故障部位：外观"
        android:textColor="#FFB5B5B5"
        android:textSize="13sp"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />



</androidx.constraintlayout.widget.ConstraintLayout>